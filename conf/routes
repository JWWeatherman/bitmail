# Load index page
GET         /                                                controllers.Assets.at(path="/public", file="index.html")

# sender routes
POST        /v1/createWallet                                 controllers.SenderController.createWallet

# Map static resources from the /public folder to the /assets URL path
GET         /v1/assets/*file                                 controllers.Assets.versioned(path="/public", file: Asset)

# Test email
GET         /v1/testEmail/:too/:from/:message/:amount        controllers.HomeController.testEmail(too, from, message, amount)


